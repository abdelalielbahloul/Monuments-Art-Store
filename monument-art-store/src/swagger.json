{
    "openapi": "3.0.0",
    "info": {
      "title": "Monument Art Store API docs",
      "description": "This is a documentation for our API",
      "version": "1.0",
      "license": {
        "name": "MIT",
        "url": "https://opensource.org/licenses/MIT"
      }
    },
    "servers": [
      {
        "url": "http://localhost:3333/api",
        "description": "Development server"
      },
      {
        "url": "http://localhost:3333/api",
        "description": "Staging server"
      },
      {
        "url": "http://localhost:3333/api",
        "description": "Production server"
      }
    ],
    "tags": [
      {
        "name": "Users",
        "description": "APIs for users in the system"
      },
      {
        "name": "Authentication",
        "description": "APIs for authentication to the system"
      }
    ],
    "components": {
      "securitySchemes": {
        "bearer":{
          "type": "http",
          "description": "Enter JWT Bearer token",
          "scheme": "bearer",
          "bearerFormat": "JWT"
        }
      },
      "schemas": {
        "CreatedResponse":{
          "properties": {
            "success":{
              "type":"boolean"
            },
            "message":{
              "type":"string"
            },
            "_id":{
              "type": "string"
            }
          }
        },
        "User":{
          "type":"object",
          "properties": {
            "_id":{
              "type":"string"
            },
            "name":{
              "type":"string"
            },
            "email":{
              "type":"string"
            },
            "image":{
              "type":"string"
            },
            "role":{
              "type":"object",
              "properties": {
                "id":{
                  "type":"number"
                },
                "name":{
                  "type":"string"
                }
              }
            },
            "contributions":{
              "type":"number"
            },
            "createdAt":{
              "type":"string"
            },
            "updatedAt":{
              "type":"string"
            }
          }
        },
        "CreateUser":{
          "type":"object",
          "properties": {
            "name":{
              "type":"string"
            },
            "email":{
              "type":"string"
            },
            "password":{
              "type":"string"
            },
            "role":{
              "type":"number",
              "enum": ["1", "2"]
            },
            "userImage":{
              "type": "string",
              "format": "binary"
            }
          },
          "required": ["name", "email", "password", "role"]
        },
        "Users":{
          "type":"object",
          "properties": {
            "users":{
              "type":"object",
              "additionalProperties": {
                "$ref": "#/components/schemas/User"
              }
            }
          }
        },
        "Art":{
          "type":"object",
          "properties": {
            "_id":{
              "type":"string"
            },
            "title":{
              "type":"string"
            },
            "image":{
              "type":"string"
            },
            "price":{
              "type":"string"
            },
            "place":{
              "type":"string"
            },
            "availableCopies":{
              "type":"number"
            },
            "createdAt":{
              "type":"string"
            },
            "updatedAt":{
              "type":"string"
            }
          }
        },
        "Arts":{
          "type":"object",
          "properties": {
            "arts":{
              "type":"object",
              "additionalProperties": {
                "$ref": "#/components/schemas/Art"
              }
            }
          }
        },
        "Login":{
          "type":"object",
          "properties": {
            "login":{
              "type":"string"
            },
            "password":{
              "type":"string"
            }
          }
        },
        "LoggedIn":{
          "type":"object",
          "properties": {
            "success":{
              "type":"string"
            },
            "token":{
              "type":"string"
            },
            "expiredIn":{
              "example":"24h"
            }
          }
        }
      }
    },
    "security": [
      {
        "bearer": []
      }
    ],
    "paths": {
      "/users":{
        "get": {
          "tags": [
            "Users"
          ],
          "summary": "Get all users in the system",
          "responses": {
            "200":{
              "description": "OK",
              "content": {
                "application/json":{
                  "schema":{
                    "type":"array",
                    "items":{
                      "$ref": "#/components/schemas/Users"
                    }
                  }
                }
              }
              
            }
          }
        },
        "post": {
          "tags": [
            "Users"
          ],
          "summary": "Create new user",
          "requestBody":{
            "required": true,
            "content": {
              "multipart/form-data":{
                "schema":{
                  "type":"object",
                  "$ref":"#/components/schemas/CreatedUser"
                }
              }
            }
          },
          "responses": {
            "201":{
              "description": "Created",
              "content": {
                "application/json":{
                  "schema":{
                    "$ref": "#/components/schemas/CreatedResponse"
                  }
                }
              }
            },
            "400":{
              "description": "Bad Request"
            },
            "409":{
              "description": "Conflict"
            },
            "401":{
              "description": "Unauthorized"
            }
          }
        }
      },
      "/users/{id}":{
        "get": {
          "parameters": [
            {
              "in": "path",
              "name": "id",
              "required": true,
              "description": "Id of the user",
              "schema":{
                "type": "string"
              }
            }
          ],
          "tags": [
            "Users"
          ],
          "summary": "Get one user by Id",
          "responses": {
            "200":{
              "description": "OK",
              "content": {
                "application/json":{
                  "schema":{
                    "$ref": "#/components/schemas/User"
                  }
                }
              }              
            },
            "404":{
              "description": "Not Found"
            },
            "401":{
              "description": "Unauthorized"
            }
          }
        },
        "patch": {
          "parameters": [
            {
              "in": "path",
              "name": "id",
              "required": true,
              "description": "Id of the user",
              "schema":{
                "type": "string"
              }
            },
            {
              "in": "query",
              "name": "body",
              "description": "New user infos",
              "schema": {
                "type":"object",
                "$ref": "#/components/schemas/CreateUser"
              }
            }
          ],
          "tags": [
            "Users"
          ],
          "summary": "Update user infos by Id",
          "responses": {
            "204":{
              "description": "No Content"
            },
            "404":{
              "description": "Not Found"
            },
            "400":{
              "description": "Bad Request"
            },
            "409":{
              "description": "Conflict"
            },
            "401":{
              "description": "Unauthorized"
            }
          }
        },
        "delete": {
          "parameters": [
            {
              "in": "path",
              "name": "id",
              "description": "Id of the user",
              "required": true,
              "schema": {
                "type":"string"
              }
            }
          ],
          "tags": [
            "Users"
          ],
          "summary": "Delete user by Id",
          "responses": {
            "204":{
              "description": "No Content"
            },
            "404":{
              "description": "Not Found"
            },
            "401":{
              "description": "Unauthorized"
            }
          }
        }
      },
      "/auth/login":{
        "post": {
          "parameters": [
            {
              "in": "query",
              "name": "body",
              "description": "Sign in body",
              "required": true,
              "schema": {
                "type":"object",
                "$ref": "#/components/schemas/Login"
              }
            }
          ],
          "tags": [
            "Authentication"
          ],
          "summary": "Sign in to the system",
          "responses": {
            "200":{
              "description": "OK",
              "content": {
                "application/json":{
                  "schema":{
                    "type":"object",
                    "$ref": "#/components/schemas/LoggedIn"
                  }
                }
              }
            }
          }
        }
      }
    }
}